@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card-body-icon {
        position: absolute;
        z-index: 0;
        top: -25px;
        right: -25px;
        font-size: 5rem;
        -webkit-transform: rotate(15deg);
        -ms-transform: rotate(15deg);
        transform: rotate(15deg);
    }
</style>
<div class="row">
    <div class="col-xl-4 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-user"></i>
                </div>
                <div class="mr-5 usersCount"></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-controller="User" asp-action="Index">
                <span class="float-left">View All Users</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-sign-language"></i>
                </div>
                <div class="mr-5 fundsCreatedCount"></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-controller="Donation" asp-action="Index">
                <span class="float-left">View Fundraisers</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-3">
        <div class="card text-white bg-info o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-share-alt"></i>
                </div>
                <div class="mr-5 visitorCount"></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-controller="Visitor" asp-action="Index">
                <span class="float-left">View All Visitors</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>
<br />
<br />
<div class="row w-100">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2>Number of visitors</h2>
            </div>
            <div class="card-body bg-white">
                <canvas id="visitorChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2>Number of fundraiser created</h2>
            </div>
            <div class="card-body bg-white">
                <canvas id="fundChart"></canvas>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<script src="~/js/Chart.min.js"></script>
<script src="~/js/Home/AdminView.js"></script>
