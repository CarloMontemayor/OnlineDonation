@model IEnumerable<OnlineDonation.Data.Entity.Visitor>

@{
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1>Visitors</h1>
</div>
<table class="table visitorTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VisitorIp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VisitorIp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('.visitorTable').DataTable({
            dom: "<'row'<'col-sm-6 col-md-6'><'col-sm-12 col-md-6'f>>" +
                "<'row'<'col-sm-12 no-bottom-margin'rt>>" +
                "<'row'<'col-sm-6 col-md-6'li><' col-sm-12 col-md-6'p>>",
            responsive: true,
            lengthChange: true,
            info: false,
            pagingType: "simple",
            autoWidth: false
        });
    });
</script>
